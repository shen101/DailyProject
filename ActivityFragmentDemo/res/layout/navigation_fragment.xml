<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/glass_navigation_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_glass_navigation" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/glass_navigation_icon"
        android:layout_centerHorizontal="true"
        android:text="@string/glass_navigation_title"
        android:textColor="@color/glass_color_white"
        android:textSize="42sp" />

    <include layout="@layout/direction_right_image" />

    <include layout="@layout/direction_left_image" />

</RelativeLayout>