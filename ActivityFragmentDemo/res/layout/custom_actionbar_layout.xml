<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/glass_color_black"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/actionbar_left_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="left|center_vertical"
        android:orientation="horizontal" >

        <TextClock
            android:id="@+id/actionbar_time_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:format12Hour="@string/glass_text_format_time_12"
            android:format24Hour="@string/glass_text_format_time_24"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/glass_color_white"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/actionbar_right_layout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/tether_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_glass_hotspot" />

        <ImageView
            android:id="@+id/gps_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_glass_gps_signal_0" />

        <ImageView
            android:id="@+id/mobile_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_glass_mobile_signal_0" />

        <ImageView
            android:id="@+id/bluetooth_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_glass_bluetooth" />

        <ImageView
            android:id="@+id/wifi_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_glass_wifi_signal_0" />

        <com.shen.widget.BatteryView
            android:id="@+id/actionbar_battery_view"
            android:layout_width="50dp"
            android:layout_height="20dp" />
    </LinearLayout>

</LinearLayout>