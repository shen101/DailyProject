<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" >

        <TextClock
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="sans-serif-light"
            android:format12Hour="@string/glass_text_format_time_12"
            android:format24Hour="@string/glass_text_format_time_24"
            android:textSize="72sp"
            android:textStyle="normal" />

        <TextClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time"
            android:layout_centerHorizontal="true"
            android:format12Hour="EE MM月dd"
            android:format24Hour="EE MM月dd"
            android:textSize="32sp"
            android:textStyle="normal" />
    </RelativeLayout>

    <include layout="@layout/direction_right_image" />

    <include layout="@layout/direction_left_image" />

</RelativeLayout>