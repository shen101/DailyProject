<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/helmet_setting_camera_front_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/helmet_setting_camera_front_title"
            android:textColor="@color/helmet_action_title_color"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/helmet_setting_camera_rear_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/helmet_setting_camera_rear_title"
            android:textColor="@color/helmet_action_title_color"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="5px"
        android:orientation="horizontal" >

        <View
            android:id="@+id/helmet_setting_camera_tab_left_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/helmet_tab_line_background_selector" />

        <View
            android:id="@+id/helmet_setting_camera_tab_right_line"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/helmet_tab_line_background_selector" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/helmet_camera_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>