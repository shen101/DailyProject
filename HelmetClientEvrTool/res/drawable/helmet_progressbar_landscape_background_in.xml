<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="0dp" />
            <gradient
                android:endColor="@color/helmet_color_edittext_selected_color"
                android:startColor="@color/helmet_color_edittext_selected_color" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="0dp" />
                <gradient
                    android:endColor="@color/helmet_default_btn_unpressed_color"
                    android:startColor="@color/helmet_default_btn_unpressed_color" />
            </shape>
        </clip>
    </item>
</layer-list>