<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voice_command_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" >

        <ImageView
            android:id="@+id/glass_voicecommand_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:src="@drawable/ic_glass_voice" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/glass_voicecommand_icon"
            android:layout_centerHorizontal="true"
            android:focusable="false"
            android:text="@string/glass_voicecommand_title"
            android:textColor="@color/glass_color_white"
            android:textSize="42sp" />
    </RelativeLayout>

    <include layout="@layout/direction_right_image" />

</RelativeLayout>